<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FragmentCatalog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageButton
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu Button"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/button_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_email"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Notifications Button"
                android:layout_gravity="end"
                android:layout_margin="20dp" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Search Container -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="8"
                android:background="@drawable/rounded_search_background">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Search Icon" />

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/search_icon"
                    android:layout_toRightOf="@id/search_icon"
                    android:hint="Search"
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Filter Button"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Highlight Container -->
        <LinearLayout
            android:id="@+id/highlight_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Placeholder for Highlights -->
            <TextView
                android:id="@+id/highlight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catalog"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Catalog Content -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_catalog"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:layout_below="@id/highlight_container"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/recommended_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_pager_catalog"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Recommended"
            android:textStyle="bold"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommended_label"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/fragment_catalog_item_recommended" />

    </RelativeLayout>

</FrameLayout>
